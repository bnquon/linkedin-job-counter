{
  "manifest_version": 3,
  "name": "Jobscura - Get Extra Insights on LinkedIn Job Postings",
  "version": "1.01",
  "description": "Shows extra insight on LinkedIn job postings",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["extension.js"],
      "run_at": "document_start"
    }
  ],
  "background": { "service_worker": "background.js" },
  "web_accessible_resources": [
    {
      "resources": ["api-fetcher.js"],
      "matches": ["*://www.linkedin.com/*"]
    }
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ]
}
